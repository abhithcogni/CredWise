@{
    Layout = "~/Views/Shared/RegisterNav.cshtml";
}
<style>

    .form-container-wrapper {
        max-width: 500px; /* Max width for login/register forms */
        width: 100%;
        margin: auto;
    }

    .form-card {
        border: 1px solid #e9ecef;
        border-radius: 0.75rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .04);
        background-color: #ffffff; /* White card background */
    }

        .form-card .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            font-weight: 600;
            color: #343a40;
            font-size: 1.5rem; /* Larger header text */
            text-align: center;
            padding: 1.5rem 1rem;
        }

            .form-card .card-header i {
                color: #0d6efd; /* Primary color for icon in header */
                margin-right: 0.5rem;
            }

        .form-card .card-body {
            padding: 2rem;
        }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-select ~ label {
        color: #0d6efd; /* Highlight color for floating labels */
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        padding: 0.75rem 1rem; /* Larger buttons */
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .form-footer-links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .form-footer-links a {
            color: #0d6efd;
            text-decoration: none;
        }

            .form-footer-links a:hover {
                text-decoration: underline;
            }

    .bank-logo {
        display: block;
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 1.5rem;
        text-decoration: none;
    }

        .bank-logo i {
            margin-right: 0.5rem;
        }

    /* Specific to KYC page for file input */
    .file-upload-label {
        display: block;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control[type="file"] {
        border: 1px dashed #ced4da;
        padding: 1rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control[type="file"]:hover {
            border-color: #0d6efd;
        }

    .alert-instructions {
        background-color: #e9f5ff;
        color: #055160;
        border: 1px solid #b6e0fe;
    }
</style>

<div class="form-container-wrapper shadow">

    <div class="card form-card">
        <div class="card-header">
            <i class="fas fa-user-plus"></i>Create Your Account
        </div>
        <div class="card-body">
            <form id="registrationForm" action="@Url.Action("CustomerDashboard","Customer")">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="fullName" placeholder="John Doe" required>
                    <label for="fullName"><i class="fas fa-user me-2"></i>Full Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                    <label for="email"><i class="fas fa-envelope me-2"></i>Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="tel" class="form-control" id="phone" placeholder="Your Phone Number" required>
                    <label for="phone"><i class="fas fa-phone me-2"></i>Phone Number</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Create Password" required>
                    <label for="password"><i class="fas fa-lock me-2"></i>Create Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                    <label for="confirmPassword"><i class="fas fa-check-circle me-2"></i>Confirm Password</label>
                </div>
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="agreeTerms" required>
                    <label class="form-check-label" for="agreeTerms">
                        I agree to the <a href="#">Terms and Conditions</a>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-user-plus me-2"></i>Register
                </button>
            </form>
            <div class="form-footer-links">
                <span>Already have an account? <a href="login.html">Login here</a></span>
            </div>
        </div>
    </div>

</div>