@{
    // This assumes you're using ASP.NET Core MVC and this is a Razor View
    // You might also add a Layout property at the top:
    Layout = "~/Views/Shared/RegisterNav.cshtml";
    // if you don't set it globally in _ViewImports.cshtml
}

<style>
    /* Styles specific to the form and its elements */
    .form-container-wrapper {
        max-width: 500px;
        width: 100%;
        margin: auto; /* Ensure it centers itself within the flex parent if needed */
    }

    .form-card {
        border: 1px solid #e9ecef;
        border-radius: 0.75rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .04);
        background-color: #ffffff;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
        font-weight: 600;
        color: #343a40;
        font-size: 1.5rem;
        text-align: center;
        padding: 1.5rem 1rem;
    }

        .card-header i {
            color: #0d6efd;
            margin-right: 0.5rem;
        }

    .card-body {
        padding: 2rem;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-select ~ label {
        color: #0d6efd;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        padding: 0.75rem 1rem;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .form-footer-links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .form-footer-links a {
            color: #0d6efd;
            text-decoration: none;
        }

            .form-footer-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="form-container-wrapper shadow ">
    <div class="card form-card">
        <div class="card-header">
            <i class="fas fa-sign-in-alt"></i>Login to Your Account
        </div>
        <div class="card-body">
            <form id="loginForm">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                    <label for="email"><i class="fas fa-envelope me-2"></i>Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Password" required>
                    <label for="password"><i class="fas fa-lock me-2"></i>Password</label>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="form-text">Forgot password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>
            </form>
            <div class="form-footer-links">
                <span>Don't have an account? <a href="@Url.Action("Register","Account")">Register here</a></span>
            </div>
        </div>
        <div class="text-center mt-3">
            <small class="text-muted">&copy; 2025 MyBank. All rights reserved.</small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any login-specific JavaScript here (e.g., form submission)
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent actual submission for demo
            alert('Login form submitted!');
            // Add your AJAX login logic here
        });
    </script>
}